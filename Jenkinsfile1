pipeline {
    agent any

    environment {
        IMAGE_NAME = "streamlit_app"
        IMAGE_TAG = "latest"
        CONTAINER_NAME = "streamlit_container"
        HOST_PORT = "8501"
        CONTAINER_PORT = "8501"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'master', url: 'https://github.com/Ayushman-1744/todo-repo.git'
            }
        }

        stage('Docker Version Test') {
            steps {
                sh 'docker --version'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh """
                        docker rm -f ${CONTAINER_NAME} || true
                        docker run -d --name ${CONTAINER_NAME} -p ${HOST_PORT}:${CONTAINER_PORT} ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Streamlit Docker container launched successfully."
        }
        failure {
            echo "Something went wrong. Check the logs above."
        }
    }
}
