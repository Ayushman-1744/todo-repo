pipeline {
    agent any

    environment {
        IMAGE_NAME = "streamlit_app"
        IMAGE_TAG = "latest"
        CONTAINER_NAME = "streamlit_container"
        HOST_PORT = "8501"
        CONTAINER_PORT = "8501"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: ''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${streamlit_app} ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Remove existing container if any, then run new one
                    sh """
                        docker rm -f ${streamlit_container} || true
                        docker run -d --name ${streamlit_container} -p ${8501}:${8501} ${streamlit_app}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Streamlit Docker container launched successfully."
        }
        failure {
            echo "Something went wrong. Check the logs above."
        }
    }
}
